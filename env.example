# WebSocket 并发客户端环境配置
# 复制此文件为 .env 并根据需要修改配置

# 并发连接数量 (默认: 10)
WS_CLIENTS=10

# WebSocket 服务器地址 (默认: wss://example.com/v1/ws/public)
WS_URL=wss://example.com/v1/ws/public

# 日志级别 (error: 只显示错误, debug: 显示所有日志)
LOG_LEVEL=error

# 自动重连配置
# 是否启用自动重连 (默认: true)
WS_RECONNECT=true

# 最大重试次数 (默认: 5)
WS_MAX_RETRIES=5

# 重试延迟秒数 (默认: 5)
WS_RETRY_DELAY=5

# 忽略接收的消息 (true: 忽略消息只保持连接, false: 正常处理消息)
WS_IGNORE_MSG=false

# 带宽优化配置
# 心跳间隔秒数 (默认: 120秒，进一步降低带宽占用)
WS_PING_INTERVAL=120

# 状态报告间隔秒数 (默认: 30秒，降低日志输出)
WS_STATUS_INTERVAL=30

# 智能心跳 (默认: true，只在连接空闲时发送心跳)
WS_SMART_PING=true

# 启用压缩 (默认: true，启用WebSocket压缩)
WS_ENABLE_COMPRESSION=true

# 其他可选配置
# 连接超时秒数 (默认: 10)
# CONNECT_TIMEOUT=10